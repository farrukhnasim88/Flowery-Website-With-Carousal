

@section styles{

    <style>
        .carousel-inner img {
            margin: auto;
        }

        form.example button {
            float: left;
            width: 20%;
            padding: 10px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-left: none;
            cursor: pointer;
        }

            form.example button:hover {
                background: #0b7dda;
            }

        form.example input[type=text] {
            padding: 10px;
            font-size: 17px;
            border: 1px solid grey;
            float: left;
            width: 80%;
            background: #f1f1f1;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12 border mt-1">
        <h3 class="text-center">Image Slideshow</h3>
        <div id="carouselExampleIndicators" class="carousel slid" style="background-color:grey;padding-top:15px;padding-bottom:15px;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/node_modules/images/flowers1.jpg" class="d-block1" alt="..." style="margin-left:40%;" />
                </div>
                <div class="carousel-item">
                    <img src="~/node_modules/images/flowers3.jpg" class="d-block1" alt="..." style="margin-left:40%;" />
                </div>
                <div class="carousel-item">
                    <img src="~/node_modules/images/flowers2.jpg" class="d-block1" alt="..." style="margin-left:40%;" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div>
            <p id="carousel-info" class=" mt-4 text-center border"> </p>
        </div>

        <button id="btn-start" type="button" class="btn btn-success btn-lg btn-block mt-4">Start Carousel</button>
        <button id="btn-stop" type="button" class="btn btn-danger btn-lg btn-block">Stop Carousel</button>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {

            // Activate Carousel with a specified interval
            $("#carouselExampleIndicators").carousel({ interval: 700 });

            // Click on the button to start sliding
            $("#btn-start").click(function () {
                $("#carouselExampleIndicators").carousel("cycle");
            });

            // Click on the button to stop sliding
            $("#btn-stop").click(function () {
                $("#carouselExampleIndicators").carousel("pause");
            });

            //display slide item's index
            $("#carouselExampleIndicators").on('slide.bs.carousel', function (event) {
                
                switch (event.to) {
                    case 0:
                        $("#carousel-info").text("First image");
                        break;
                    case 1:
                        $("#carousel-info").text("Second image");
                        break;
                    case 2:
                        $("#carousel-info").text("Third image");
                        break;
                }
            });
        });

    </script>

}